<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#b6dce7"
            android:id="@+id/layout_title"
            android:padding="5dp">

            <TextView
                android:id="@+id/pigeon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="信使1号"
                android:maxLength="6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pigeon_id"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/pigeon_name"
                android:text="ID:1234567890"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/pigeon_status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:text="飞行中" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_content"
            android:layout_below="@+id/layout_title"
            android:padding="5dp">
            <TextView
                android:id="@+id/fly_times_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="飞行次数："
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fly_times"
                android:text="14"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/fly_times_tag"
                android:textSize="16dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_time_tag"
                android:text="飞行时间："
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/fly_times"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_time"
                android:text="52时34分"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/total_time_tag"
                android:layout_alignParentTop="true"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_distance_tag"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text=" 总 里 程："
                android:layout_below="@+id/fly_times_tag"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_distance"
                android:layout_toRightOf="@+id/total_distance_tag"
                android:layout_below="@+id/fly_times_tag"
                android:textSize="16dp"
                android:text="859Km"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/birth_date_tag"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/total_distance_tag"
                android:layout_alignParentLeft="true"
                android:text="出生日期："
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/birth_date"
                android:text="2015年10月3日"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/birth_date_tag"
                android:layout_below="@+id/total_distance_tag"
                android:textSize="16dp"
                android:layout_marginTop="5dp" />
            <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:id="@+id/item_edit_button"
                android:textSize="14dp"
                android:text="编辑"
                android:layout_alignParentBottom="false"
                android:background="@drawable/button_shape"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/birth_date_tag"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/pigeon_fly_button" />
            <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:id="@+id/pigeon_fly_button"
                android:background="@drawable/button_shape"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_alignBottom="@+id/birth_date_tag"
                android:text="放飞"
                android:layout_marginRight="20dp"
                android:textSize="14dp" />
            </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>