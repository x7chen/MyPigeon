<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:record_item_card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/record_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        record_item_card_view:cardCornerRadius="10dp"
        record_item_card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_start_date_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="开始时间"
                android:textSize="14dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/record_item_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/record_item_start_date_tag"
                android:text="2016年6月10日"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/record_item_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/record_item_start_date"
                android:layout_gravity="center_horizontal"
                android:text="09:30"
                android:textSize="14dp" />

            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_start_address_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/record_item_start_time"
                android:text="开始地点"
                android:textSize="14dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/record_item_start_address"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/record_item_start_address_tag"
                android:text="深圳西乡2号鸽棚"
                android:textSize="14dp" />

            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_arrive_date_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="到达时间"
                android:textSize="14dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/record_item_arrive_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/record_item_arrive_date_tag"
                android:text="2016年6月10日"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/record_item_arrive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/record_item_arrive_date"
                android:layout_gravity="center_horizontal"
                android:text="09:30"
                android:textSize="14dp" />

            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_arrive_address_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/record_item_arrive_time"
                android:text="到达地点"
                android:textSize="14dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/record_item_arrive_address"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/record_item_arrive_address_tag"
                android:text="深圳西乡2号鸽棚"
                android:textSize="14dp"
                android:textAlignment="textEnd" />

            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_distance_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/record_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="265Km"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/record_item_distance_tag"
                android:layout_marginTop="5dp"
                android:textColor="#038281" />
            <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                android:id="@+id/record_item_elapsed_time_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耗时"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/record_item_distance"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/record_item_elapsed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0天6时30分"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/record_item_elapsed_time_tag"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>