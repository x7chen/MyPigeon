<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pigeon_edit_card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pumelotech.dev.mypigeon.PigeonEditActivity">
    <include layout="@layout/app_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pigeon_edit_card_view"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            pigeon_edit_card_view:cardCornerRadius="10dp"
            pigeon_edit_card_view:cardElevation="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pigeon_edit_title"
                    android:text="信息卡"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
                <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                    android:id="@+id/pigeon_edit_name_tag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="鸽 子 名："
                    android:textSize="16dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="20dp"
                    android:layout_below="@+id/pigeon_edit_title"
                    android:gravity="right"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/pigeon_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:width="120dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/pigeon_edit_name_tag"
                    android:layout_alignBottom="@+id/pigeon_edit_name_tag"
                    android:layout_marginRight="20dp"
                    android:textSize="16dp" />


                <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                    android:id="@+id/pigeon_edit_id_tag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="鸽 子 ID："
                    android:textSize="16dp"
                    android:layout_below="@+id/pigeon_edit_name_tag"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="20dp"
                    android:gravity="right"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/pigeon_edit_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/pigeon_edit_id_tag"
                    android:layout_alignBottom="@+id/pigeon_edit_id_tag"
                    android:layout_marginRight="20dp"
                    android:textSize="16dp" />

                <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                    android:id="@+id/pigeon_edit_birth_date_tag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="出生日期："
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/pigeon_edit_id_tag"
                    android:layout_margin="20dp"
                    android:gravity="right"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/pigeon_edit_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/pigeon_edit_birth_date_tag"
                    android:layout_alignBottom="@+id/pigeon_edit_birth_date_tag"
                    android:layout_marginRight="20dp"
                    android:inputType="date"
                    android:textSize="16dp" />
                <com.pumelotech.dev.mypigeon.UserView.TextViewMSYH
                    android:id="@+id/pigeon_edit_shed_tag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="鸽    棚 ："
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/pigeon_edit_birth_date_tag"
                    android:layout_margin="20dp"
                    android:gravity="right"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/pigeon_edit_shed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/pigeon_edit_shed_tag"
                    android:layout_alignBottom="@+id/pigeon_edit_shed_tag"
                    android:layout_marginRight="20dp"
                    android:textSize="16dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!-- TODO: Update blank fragment layout -->
    </RelativeLayout>


</RelativeLayout>
